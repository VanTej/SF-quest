<form method="post" action="{{ path('app_season_delete', {'id': season.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette saison?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ season.id) }}">
    <button class="btn btn-secondary text-white w-100">Supprimer</button>
</form>
