{% extends 'base.html.twig' %}

{% block title %}Season index
{% endblock %}

{% block body %}
	<main>
		<h1 class="my-5">Saisons</h1>
		<div class="d-flex justify-content-center">
			<a class="btn btn-secondary text-white" href="{{ path('app_season_new') }}">Ajouter une saison</a>
		</div>
		<div class="container">
			<table class="table">
				<thead>
					<tr>
						<th>Série</th>
						<th>Numéro</th>
						<th>Année</th>
						<th>Description</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for season in seasons %}
						<tr>
							<td>{{ season.program.title}}</td>
							<td>{{ season.number }}</td>
							<td>{{ season.year }}</td>
							<td>{{ season.description }}</td>
							<td>
								<div class="d-flex flex-column">
									<a class="btn btn-secondary text-white w-100 mb-2" href="{{ path('app_season_show', {'id': season.id}) }}">Voir</a>
									<a class="btn btn-secondary text-white w-100 mb-2" href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>
									{{ include('season/_delete_form.html.twig') }}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucune saison trouvée</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endblock %}
