{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
	<main>
		<h1 class="my-5">{{ season.program.title }}
			Saison
			{{ season.number }}</h1>

		<div class="container col-lg-6 d-flex flex-column">
			<table class="table">
				<tbody>
					<tr>
						<th>Numéro</th>
						<td>{{ season.number }}</td>
					</tr>
					<tr>
						<th>Année</th>
						<td>{{ season.year }}</td>
					</tr>
					<tr>
						<th>Description</th>
						<td>{{ season.description }}</td>
					</tr>
				</tbody>
			</table>

			<div class="w-25">
				<a class="btn btn-secondary text-white w-100 mb-2" href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>
				{{ include('season/_delete_form.html.twig') }}
			</div>
			<a class="align-self-center mt-5" href="{{ path('app_season_index') }}">Retour à la liste des saisons</a>
		</div>
	</main>
{% endblock %}
