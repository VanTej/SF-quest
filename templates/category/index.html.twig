{% extends 'base.html.twig' %}

{% block body %}
	<main>
		<h1 class="my-5">Toutes les catégories</h1>
		<div class="container d-flex flex-column align-items-center">
			{% if is_granted('ROLE_ADMIN') %}
				<a class="btn btn-secondary text-white px-3 fs-6" href="{{ path('category_new') }}">Ajouter une catégorie</a>
			{% endif %}
			<div class="d-flex justify-content-center flex-wrap col-lg-9 my-5">
				{% for category in categories %}
					<a class="btn btn-primary text-white px-3 m-3 fs-4" href="{{ path('category_show', {'name': category.name}) }}">{{ category.name }}</a>
				{% endfor %}
			</div>
		</div>
	</main>
{% endblock %}
